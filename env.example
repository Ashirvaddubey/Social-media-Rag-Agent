# Social Media RAG Environment Configuration

# YouTube Data API v3
YOUTUBE_API_KEY=your_youtube_api_key_here

# OpenAI API (optional - for enhanced LLM responses)
OPENAI_API_KEY=your_openai_api_key_here

# HuggingFace API (optional - for embeddings when OpenAI is not available)
HUGGINGFACE_API_KEY=your_huggingface_api_key_here

# Reddit API (optional - for Reddit data ingestion)
REDDIT_CLIENT_ID=your_reddit_client_id
REDDIT_CLIENT_SECRET=your_reddit_client_secret
REDDIT_USER_AGENT=SocialMediaRAG/1.0

# ChromaDB Configuration (optional - for vector storage)
CHROMA_HOST=localhost
CHROMA_PORT=8000

# Database Configuration (optional - uses in-memory by default)
MONGODB_URL=mongodb://localhost:27017/Social-Media-Rag

# JWT Secret for Authentication
JWT_SECRET=your_jwt_secret_here
